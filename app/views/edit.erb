
<form action="/posts/<%=@post.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Post Name: <input type="text" name="post[name]" id="name" value=<%=@post.name%>></p>
  <p>Post Content: <input type="text" name="post[content]" id="content" value=<%=@post.content%>>></p>
  <input type="submit" value="submit">
</form>
